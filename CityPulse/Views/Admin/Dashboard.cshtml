@model CityPulse.Models.AdminDashboardViewModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="admin-wrapper">
    <!-- Sidebar Navigation -->
    <nav class="admin-sidebar">
        <div class="sidebar-header">
            <div class="d-flex justify-content-between align-items-center mb-2">
                <h5 class="mb-0"><i class="bi bi-shield-check me-2"></i>Admin Panel</h5>
                <a asp-action="Logout" class="btn btn-sm btn-outline-light" style="border-radius: 10px;" title="Logout">
                    <i class="bi bi-box-arrow-right"></i>
                </a>
            </div>
            <small class="text-muted">@Context.Session.GetString("AdminUsername")</small>
        </div>
        <ul class="sidebar-nav">
            <li class="sidebar-nav-item">
                <a class="sidebar-nav-link active" data-target="dashboard-section">
                    <i class="bi bi-speedometer2"></i>
                    <span>Dashboard</span>
                </a>
            </li>
            <li class="sidebar-nav-item">
                <a class="sidebar-nav-link" data-target="analytics-section">
                    <i class="bi bi-graph-up"></i>
                    <span>Analytics</span>
                </a>
            </li>
        </ul>
    </nav>

    <!-- Main Content Area -->
    <div class="admin-content">
        <!-- Dashboard Section -->
        <div id="dashboard-section" class="content-section active">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2 class="fw-bold mb-1">Service Request Dashboard</h2>
                    <p class="text-muted mb-0">Monitor and manage all citizen reports and service requests</p>
                </div>
                <div>
                    <a asp-action="AddAnnouncement" class="btn btn-dark" style="border-radius: 20px;">
                        <i class="bi bi-plus-circle me-1"></i>Add Announcement
                    </a>
                </div>
            </div>

            <!-- Statistics Cards -->
            <div class="row g-4 mb-4">
                <div class="col-12 col-md-6 col-lg-3">
                    <div class="card stat-card border-warning shadow-sm" style="border-width: 2px; border-radius: 15px;">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <p class="text-muted mb-1 small">Pending</p>
                                    <h2 class="fw-bold mb-0" style="color: #ffc107;" id="dashPendingCount">0</h2>
                                </div>
                                <div>
                                    <i class="bi bi-hourglass-split stat-icon" style="color: #ffc107;"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-12 col-md-6 col-lg-3">
                    <div class="card stat-card shadow-sm" style="border-width: 2px; border-radius: 15px; border-color: #0dcaf0;">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <p class="text-muted mb-1 small">In Progress</p>
                                    <h2 class="fw-bold mb-0" style="color: #0dcaf0;" id="dashProgressCount">0</h2>
                                </div>
                                <div>
                                    <i class="bi bi-gear-fill stat-icon" style="color: #0dcaf0;"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-12 col-md-6 col-lg-3">
                    <div class="card stat-card border-success shadow-sm" style="border-width: 2px; border-radius: 15px;">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <p class="text-muted mb-1 small">Resolved</p>
                                    <h2 class="fw-bold text-success mb-0" id="dashResolvedCount">0</h2>
                                </div>
                                <div>
                                    <i class="bi bi-check-circle-fill stat-icon text-success"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-12 col-md-6 col-lg-3">
                    <div class="card stat-card shadow-sm" style="border-width: 2px; border-radius: 15px; border-color: #dc3545;">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <p class="text-muted mb-1 small">Rejected</p>
                                    <h2 class="fw-bold mb-0" style="color: #dc3545;" id="dashRejectedCount">0</h2>
                                </div>
                                <div>
                                    <i class="bi bi-x-circle-fill stat-icon" style="color: #dc3545;"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Service Requests Table -->
            <div class="row">
                <div class="col-12">
                    <div class="card table-card shadow-sm">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">
                                <i class="bi bi-clipboard-check me-2"></i>Service Requests & Reports
                            </h5>
                            <div>
                                <select class="form-select form-select-sm d-inline-block w-auto me-2" id="dashStatusFilter">
                                    <option value="all">All Status</option>
                                    <option value="Pending" selected>Pending</option>
                                    <option value="InProgress">In Progress</option>
                                    <option value="Resolved">Resolved</option>
                                    <option value="Rejected">Rejected</option>
                                </select>
                                <button class="btn btn-sm btn-outline-dark rounded-circle" onclick="refreshDashboard()" title="Refresh Data" style="width: 32px; height: 32px; padding: 0; display: inline-flex; align-items: center; justify-content: center;">
                                    <i class="bi bi-arrow-clockwise" id="refreshIcon"></i>
                                </button>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-hover" id="serviceRequestsTable">
                                    <thead>
                                        <tr>
                                            <th>Reference</th>
                                            <th>Category</th>
                                            <th>Location</th>
                                            <th>Description</th>
                                            <th>Date</th>
                                            <th>Status</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody id="dashRequestsBody">
                                        <tr>
                                            <td colspan="7" class="text-center">
                                                <div class="spinner-border text-primary" role="status">
                                                    <span class="visually-hidden">Loading...</span>
                                                </div>
                                                <p class="mt-2 text-muted">Loading service requests...</p>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Analytics Section -->
        <div id="analytics-section" class="content-section">  // TODO: I shall add this functionality in part 3 
            <div class="mb-4">
                <h2 class="fw-bold mb-1">Analytics & Reports</h2>
                <p class="text-muted mb-0">Track system performance and user engagement</p>
            </div>

            <div class="row g-4 mb-4">
                <div class="col-md-6">
                    <div class="card table-card shadow-sm">
                        <div class="card-header">
                            <h5 class="mb-0">
                                <i class="bi bi-pie-chart me-2"></i>Reports by Category
                            </h5>
                        </div>
                        <div class="card-body">
                            <canvas id="categoryChart" style="max-height: 300px;"></canvas>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="card table-card shadow-sm">
                        <div class="card-header">
                            <h5 class="mb-0">
                                <i class="bi bi-graph-up me-2"></i>Monthly Trends
                            </h5>
                        </div>
                        <div class="card-body">
                            <canvas id="trendChart" style="max-height: 300px;"></canvas>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row g-4">
                <div class="col-lg-3 col-md-6">
                    <div class="card stat-card border-primary shadow-sm" style="border-width: 2px; border-radius: 15px;">
                        <div class="card-body text-center">
                            <i class="bi bi-file-earmark-text text-primary" style="font-size: 2rem;"></i>
                            <h3 class="fw-bold mt-2">234</h3>
                            <p class="text-muted mb-0">Total Reports</p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <div class="card stat-card border-success shadow-sm" style="border-width: 2px; border-radius: 15px;">
                        <div class="card-body text-center">
                            <i class="bi bi-check-circle text-success" style="font-size: 2rem;"></i>
                            <h3 class="fw-bold mt-2">189</h3>
                            <p class="text-muted mb-0">Resolved</p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <div class="card stat-card shadow-sm" style="border-width: 2px; border-radius: 15px; border-color: #fd7e14;">
                        <div class="card-body text-center">
                            <i class="bi bi-clock-history" style="font-size: 2rem; color: #fd7e14;"></i>
                            <h3 class="fw-bold mt-2">32</h3>
                            <p class="text-muted mb-0">Pending</p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <div class="card stat-card shadow-sm" style="border-width: 2px; border-radius: 15px; border-color: #212529;">
                        <div class="card-body text-center">
                            <i class="bi bi-people" style="font-size: 2rem; color: #212529;"></i>
                            <h3 class="fw-bold mt-2">1,245</h3>
                            <p class="text-muted mb-0">Active Users</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

<!-- Review Modal -->
<div class="modal fade" id="reviewModal" tabindex="-1" aria-labelledby="reviewModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title" id="reviewModalLabel">
                    <i class="bi bi-check-circle-fill me-2"></i>Review Service Request
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <h6 class="text-success">
                        <i class="bi bi-check-circle-fill me-2"></i>Verified
                    </h6>
                </div>

                <!-- Report Details -->
                <div class="card mb-3">
                    <div class="card-header bg-light">
                        <h6 class="mb-0"><i class="bi bi-file-text me-2"></i>Report Details</h6>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <p class="mb-2"><strong><i class="bi bi-hash"></i> Reference:</strong> <span id="modalRefNumber">-</span></p>
                                <p class="mb-2"><strong><i class="bi bi-geo-alt-fill"></i> Location:</strong> <span id="modalLocation">-</span></p>
                                <p class="mb-0"><strong><i class="bi bi-tag-fill"></i> Category:</strong> <span id="modalCategory" class="badge bg-secondary">-</span></p>
                            </div>
                            <div class="col-md-6">
                                <p class="mb-2"><strong><i class="bi bi-calendar3"></i> Submitted:</strong> <span id="modalDate">-</span></p>
                                <p class="mb-2"><strong><i class="bi bi-person"></i> User ID:</strong> <span id="modalUserId">-</span></p>
                                <p class="mb-0"><strong><i class="bi bi-circle-fill"></i> Status:</strong> <span id="modalStatus" class="badge">-</span></p>
                            </div>
                        </div>
                        <hr>
                        <div>
                            <strong><i class="bi bi-file-text"></i> Description:</strong>
                            <p class="mt-2" id="modalDescription">-</p>
                        </div>
                    </div>
                </div>

                <!-- Solution Proposal -->
                <div class="card">
                    <div class="card-header bg-light">
                        <h6 class="mb-0"><i class="bi bi-lightbulb me-2"></i>Proposed Solution</h6>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label for="solutionType" class="form-label">Solution Type</label>
                            <select class="form-select" id="solutionType">
                                <option value="">Select solution approach...</option>
                                <option value="immediate">Immediate Action - Dispatch crew</option>
                                <option value="scheduled">Scheduled Maintenance</option>
                                <option value="investigation">Further Investigation Required</option>
                                <option value="contractor">Third-party Contractor Needed</option>
                                <option value="completed">Already Addressed</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="solutionNotes" class="form-label">Resolution Notes</label>
                            <textarea class="form-control" id="solutionNotes" rows="4" placeholder="Enter details about the solution, actions taken, or estimated completion time..."></textarea>
                        </div>
                        <div class="mb-3">
                            <label for="estimatedCompletion" class="form-label">Estimated Completion (Optional)</label>
                            <input type="date" class="form-control" id="estimatedCompletion">
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="bi bi-x-circle me-1"></i>Cancel
                </button>
                <button type="button" class="btn btn-success" onclick="markAsResolved()">
                    <i class="bi bi-check-circle-fill me-1"></i>Mark as Resolved
                </button>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/admin-dashboard.css" asp-append-version="true">
}

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="~/js/admin-dashboard.js" asp-append-version="true"></script>
}

@functions {
    string GetCategoryBadgeClass(CityPulse.Models.AnnouncementCategory category)
    {
        return category switch
        {
            CityPulse.Models.AnnouncementCategory.Announcement => "bg-primary",
            CityPulse.Models.AnnouncementCategory.Event => "bg-primary",
            CityPulse.Models.AnnouncementCategory.ServiceUpdate => "bg-success",
            CityPulse.Models.AnnouncementCategory.Notice => "bg-notice-orange",
            CityPulse.Models.AnnouncementCategory.Program => "bg-dark text-white",
            CityPulse.Models.AnnouncementCategory.Emergency => "bg-notice-orange",
            _ => "bg-dark text-white"
        };
    }

    string GetPriorityBadgeClass(CityPulse.Models.AnnouncementPriority priority)
    {
        return priority switch
        {
            CityPulse.Models.AnnouncementPriority.Critical => "bg-notice-orange",
            CityPulse.Models.AnnouncementPriority.High => "bg-notice-orange",
            CityPulse.Models.AnnouncementPriority.Normal => "bg-primary",
            CityPulse.Models.AnnouncementPriority.Low => "bg-dark text-white",
            _ => "bg-dark text-white"
        };
    }
}
