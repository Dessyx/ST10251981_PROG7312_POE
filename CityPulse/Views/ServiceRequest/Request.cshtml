@{
    ViewData["Title"] = "Service Request Status";
}

<link rel="stylesheet" href="~/css/service-request.css" asp-append-version="true" />

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold mb-1">
                <i class="bi bi-clipboard-check me-2"></i>Track Your Service Requests
            </h2>
            <p class="text-muted mb-0">Monitor the progress of your submitted service requests</p>
        </div>
        <a href="@Url.Action("Create", "ReportIssues")" class="btn btn-primary" style="border-radius: 20px;">
            <i class="bi bi-plus-circle me-1"></i>New Request
        </a>
    </div>

    <!-- Resolved Reports Notice -->
    <div id="resolvedNotice" class="alert-dismissible fade show" role="alert" style="display: none; background: white; border-radius: 10px; box-shadow: 0 4px 16px rgba(0,0,0,0.2); padding: 1.5rem; border: none;">
        <div class="d-flex align-items-start">
            <i class="bi bi-check-circle-fill me-3" style="font-size: 2rem; color: #28a745;"></i>
            <div class="flex-grow-1">
                <h5 class="mb-2" style="color: #333; font-weight: 600;">
                    <i class="bi bi-party-popper me-2"></i>Great News!
                </h5>
                <p class="mb-0" id="resolvedNoticeText" style="color: #333;"></p>
            </div>
        </div>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>

    <!-- Search and Filter Section -->
    <div class="card search-card mb-4">
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-6">
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-search"></i></span>
                        <input type="text" class="form-control" id="searchInput" placeholder="Search by Reference Number...">
                    </div>
                </div>
                <div class="col-md-3">
                    <select class="form-select" id="statusFilter">
                        <option value="all">All Status</option>
                        <option value="pending">Pending</option>
                        <option value="inprogress">In Progress</option>
                        <option value="resolved">Resolved</option>
                        <option value="rejected">Rejected</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <select class="form-select" id="categoryFilter">
                        <option value="all">All Categories</option>
                        <option value="sanitation">Sanitation</option>
                        <option value="roads">Roads</option>
                        <option value="utilities">Utilities</option>
                        <option value="water">Water</option>
                        <option value="electricity">Electricity</option>
                        <option value="other">Other</option>
                    </select>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistics Overview -->
    <div class="row g-3 mb-4">
        <div class="col-md-3 col-sm-6">
            <div class="stat-card stat-card-pending">
                <div class="stat-icon">
                    <i class="bi bi-hourglass-split"></i>
                </div>
                <div class="stat-content">
                    <h3 class="stat-number">0</h3>
                    <p class="stat-label">Pending</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6">
            <div class="stat-card stat-card-progress">
                <div class="stat-icon">
                    <i class="bi bi-gear-fill"></i>
                </div>
                <div class="stat-content">
                    <h3 class="stat-number">0</h3>
                    <p class="stat-label">In Progress</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6">
            <div class="stat-card stat-card-resolved">
                <div class="stat-icon">
                    <i class="bi bi-check-circle-fill"></i>
                </div>
                <div class="stat-content">
                    <h3 class="stat-number">0</h3>
                    <p class="stat-label">Resolved</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6">
            <div class="stat-card stat-card-rejected">
                <div class="stat-icon">
                    <i class="bi bi-x-circle-fill"></i>
                </div>
                <div class="stat-content">
                    <h3 class="stat-number">0</h3>
                    <p class="stat-label">Rejected</p>
                </div>
            </div>
        </div>
    </div>

 
    <div class="mb-5"></div>

    <!-- Service Requests List -->
    <div class="row g-4" id="requestsContainer">
       
    </div>

   
    <div id="emptyState" class="text-center py-5" style="display: none;">
        <i class="bi bi-inbox" style="font-size: 4rem; color: #ccc;"></i>
        <h4 class="mt-3 text-muted">No requests found</h4>
        <p class="text-muted">Try adjusting your search or filter criteria</p>
    </div>
</div>

@section Scripts {
    <script src="~/js/service-request.js" asp-append-version="true"></script>
}
